{% extends 'base.html.twig' %}

{% block title %}Lista de Categorías{% endblock %}

{% block body %}
<div class="container">
    <h1>Categorías</h1>
    <a href="{{ path('category_new') }}">Agregar</a>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <table class="table" id="category_table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Código</th>
            <th scope="col">Estado</th>
            <th scope="col">acción</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
        <tr class="{% if not category.active %}table-dark{% endif %}">
            <th scope="row">{{category.name}}</th>
            <td>{{category.description}}</td>
            <td>{{category.code}}</td>
            <td>
                <a href="{{ path('category_toggle_state',{id:category.id}) }}" class="toggle_state">
                    {% if category.active %}
                        Desactivar
                    {% else %}
                        Activar
                    {% endif %}
                </a>
            </td>
            <td>
                <a href="{{ path('category_edit',{id:category.id}) }}">Editar</a>
                <a href="{{ path('category_remove',{id:category.id}) }}" class="destroy_category">Eliminar</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#category_table').DataTable({
                "lengthChange": false,
                "paging": false
            });
            $('.destroy_category').click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Realmente Deseas Eliminar Este Elemento',
                    text: "No podras revertir esta Acción!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Si!'
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', $(this).attr('href'))
                    }
                })
            });
            $('.toggle_state').click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: '¿Quieres Cambiar El Estado?',
                    text: "Esto puede restringir los productos asociados!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Cambiar!'
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', $(this).attr('href'))
                    }
                })
            });
        });
    </script>
{% endblock %}
